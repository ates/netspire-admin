<% content_for :sidebar do %>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">RADIUS managment</li>
      <li><h5><%= link_to 'Add new attribute', new_private_radius_attribute_path %></h5></li>
    </ul>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% @radius_attributes.each do |attr| %>
      <tr>
        <td><%= link_to attr.name, edit_private_radius_attribute_path(attr) %></td>
        <td><%= truncate(attr.description, :length => 60) %></td>
        <td><%= localized_time(attr.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= page_navigation @radius_attributes %>
