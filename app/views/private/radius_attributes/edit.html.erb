<% content_for :sidebar do %>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">RADIUS managment</li>
      <li><h5><%= link_to 'Add new attribute', new_private_radius_attribute_path %></h5></li>
      <li><h5><%= link_to 'List of attributes', private_radius_attributes_path %></h5></li>
    </ul>
  </div>
<% end %>

<legend>Edit attribute</legend>

<%= form_for([:private, @radius_attribute], :html => { :class => "form-horizontal" }) do |f| -%>
  <%= render "shared/error_messages", :target => @radius_attribute %>
  <%= render :partial => "form", :object => f %>
  <div class="form-actions">
    <%= f.submit 'Update', :class => "btn btn-primary" %>
    <%= f.submit 'Reset', :type => "reset", :class => "btn" %>
  </div>
<% end -%>
